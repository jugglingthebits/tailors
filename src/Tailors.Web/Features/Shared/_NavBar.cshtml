@using Tailors.Domain.UserAggregate

<nav class="mt-2 ml-2 flex gap-2">
    <a class="" asp-area="" asp-controller="Feed" asp-action="Index">
        <img src="/images/tweed.png" alt="Tweed Logo" width="24" height="24"/>
    </a>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a class="" asp-controller="Tweed" asp-action="Create">Create</a>
        <a class="" asp-controller="Search" asp-action="Index">Search</a>
        <form class="form-inline" action="@Url.Action(action: "SignOutCurrentUser", controller: "Authentication", values: new { ReturnUrl = Url.Action("Index", "Feed") })" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    }
</nav>
