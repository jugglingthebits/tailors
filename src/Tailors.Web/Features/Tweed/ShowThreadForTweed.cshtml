@model Tailors.Web.Features.Tweed.ShowThreadForTweedViewModel

@{
    ViewData["Title"] = "Tweed";
}

@foreach (var tweed in Model.LeadingTweeds)
{
    <partial name="_Tweed"
             model="tweed" />
}

<partial name="_CreateReplyTweed"
         model="@Model.CreateReplyTweed" />

@foreach (var tweed in Model.ReplyTweeds)
{
    <partial name="_Tweed"
             model="tweed" />
}
